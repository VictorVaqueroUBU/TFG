{% extends 'intranet/forpas/gestor/index.html.twig' %}

{% block title %}{{ titulo }}{% endblock %}

{% block content %}
    <div class="pagina-titulo">Portal del Gestor</div>

    <div class="pagina-seccion">{{ titulo }}</div>

    <div class="container-fluid py-4 g-4">
        <div class="row py-2">
            <div class="fila-campo">Nif</div>
            <div class="fila-valor">{{ formador.nif }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Apellidos</div>
            <div class="fila-valor">{{ formador.apellidos }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Nombre</div>
            <div class="fila-valor">{{ formador.nombre }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Organización</div>
            <div class="fila-valor">{{ formador.organizacion }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Correo</div>
            <div class="fila-valor">{{ formador.correo }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Teléfono</div>
            <div class="fila-valor">{{ formador.telefono }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Régimen Jurídico</div>
            <div class="fila-valor">{{ formador.formadorRJ | formadorRJTexto }}</div>
        </div>
        <div class="row py-2">
            <div class="fila-campo">Observaciones</div>
            <div class="fila-valor">{{ formador.observaciones }}</div>
        </div>
    </div>
{% endblock %}

{% block botones %}
    <li class="nav-item me-2">
        <a class="btn btn-primary" href="#"
           onclick="window.location.href='{{ path('intranet_forpas_gestor_formador_index') }}';">
            <span class="fas fa-reply"></span> Volver
        </a>
    </li>

    <li class="nav-item me-2">
        <a class="btn btn-primary"
           href="{{ path('intranet_forpas_gestor_formador_edit', {'id': formador.id}) }}">
            <span class="fas fa-edit"></span> Editar
        </a>
    </li>

    <li class="nav-item ms-5 me-2">
        {{ include('intranet/forpas/gestor/formador/_delete_form.html.twig', { 'id': formador.id, 'buttonType': 'primary' }) }}
    </li>
{% endblock %}
